{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cauldron</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}cauldron.type{%endtrans%}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}cauldron.unitCost{%endtrans%}</th>
                <td>{{ entity.cauldronType }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li class="btn btn-default">
        <a href="{{ path('company_show',{ 'id': app.request.get('company_id')}) }}">
            {% trans %}action.back_to_list{%endtrans%}
        </a>
    </li>
    <li class="btn btn-default">
        <a href="{{ path('cauldron_edit', { 'id': entity.id, 'company_id': app.request.get('company_id') }) }}">
            {% trans %}action.edit{%endtrans%}
        </a>
    </li>
    {{ form(delete_form) }}
</ul>
{% endblock %}
