{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Car list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}car.brand{%endtrans%}</th>
                <th>{% trans %}car.fuelType{%endtrans%}</th>
                <th>{% trans %}action.action{%endtrans%}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('car_show', { 'id': entity.id, 'company_id': app.request.get('company_id') }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.unitCost.fuelType }}</td>
                <td>
                <ul>
                    <li class="btn btn-default">
                        <a href="{{ path('car_show', { 'id': entity.id, 'company_id': app.request.get('company_id') }) }}">{% trans %}action.show{%endtrans%}</a>
                    </li>
                    <li class="btn btn-default">
                        <a href="{{ path('car_edit', { 'id': entity.id, 'company_id': app.request.get('company_id') }) }}">{% trans %}action.edit{%endtrans%}</a>
                    </li>
                    <li class="btn btn-default">
                        <a href="{{ path('car_refuel', { 'id': entity.id, 'company_id': app.request.get('company_id') }) }}">{% trans %}action.tank{%endtrans%}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li class="btn btn-default">
            <a href="{{ path('company') }}">
                {% trans %}action.back_to_list{%endtrans%}
            </a>
        </li>
        <li class="btn btn-default">
            <a href="{{ path('car_new', { 'company_id' : app.request.get('company_id')}) }}">
                {% trans %}car.add_new{%endtrans%}
            </a>
        </li>
    </ul>
    {% endblock %}
