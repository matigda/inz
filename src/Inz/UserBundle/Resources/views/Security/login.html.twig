{% extends '::base.html.twig' %}

{% block body -%}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
 <div class="col-md-8">
    <img class="img-responsive img-rounded" src="http://placehold.it/900x350" alt="">
</div>
 
<div class="col-md-4">

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-actions">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" style="height:34px;" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" style="height:34px;" type="password" id="password" name="_password" required="required" />
        <br />
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <br />
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary"/>
    </form>
    
</div>
    
{% endblock %}


{% block footer %}
    {% include '::footer.html.twig' %}
{% endblock %}  